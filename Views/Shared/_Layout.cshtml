<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AddressBook - MVC</title>
    <link rel="icon" href="./img/yohan-logo.png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/stylesheet.css" />

    <!--FONT-AWESOME ICONS-->
    <script src="https://kit.fontawesome.com/5db21ba9c6.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Noto+Serif+Display:ital,wght@0,500;0,700;0,900;1,400&family=Poppins:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <header class="bg-light shadow-lg">
        <!--Nav Section-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-md-4">
                    <a href="https://yohanvaldes.me/" target="_blank">
                        <img src="~/img/yohan-logo.png" class="img w-50" alt="yohanvaldes-logo" />
                    </a>
                </div>
                <div class="col-12 col-md-8 d-flex justify-content-center">
                    <ul class="nav navbar">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" id="home">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
                                  <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5z"/>
                                </svg>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contacts" asp-action="Index">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-journal-bookmark-fill" viewBox="0 0 16 16">
                                  <path fill-rule="evenodd" d="M6 1h6v7a.5.5 0 0 1-.757.429L9 7.083 6.757 8.43A.5.5 0 0 1 6 8V1z"/>
                                  <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z"/>
                                  <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z"/>
                                </svg>
                                App
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="About">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-file-person-fill" viewBox="0 0 16 16">
                                  <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm-1 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm-3 4c2.623 0 4.146.826 5 1.755V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-1.245C3.854 11.825 5.377 11 8 11z"/>
                                </svg>
                                About
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="p-sm-5 p-3 min-vh-100">
            @RenderBody()
        </main>
    </div>

    <!--Footer Section-->
    <div class="footer p-5 bg-light">
        <div class="container-fluid">
            <div class="row row-cols-sm-3 text-center d-flex justify-content-center">
                <div class="col-12 col-sm-2">
                    <div>
                        <i class="fas fa-map-marked-alt fa-2x secondary-color"></i><br>
                        <p>Lakeland FL</p>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row-cols-1">
                <div class="col d-flex justify-content-center p-2">
                    <div class="row">
                        <div class="col">
                            <a href="https://github.com/yohanJS" target="_blank" rel="noopener"><i class="fab fa-github fa-2x main-color"></i></a>
                        </div>
                        <div class="col">
                            <a href="https://www.linkedin.com/in/yohanjs/" target="_blank" rel="noopener"><i class="fab fa-linkedin fa-2x main-color"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col d-flex justify-content-center">
                    <div class="mt-3 m-sm-0">
                        <p>Copyright &copy; 2021 <span class="main-color">Yohan Valdes</span>, All Rights Reserved.</p>
                        <p>Developed by <span class="main-color">Yohan Valdes.</span></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-2">
            <a href="#home" title="To Top">
                <span><i class="fas fa-sort-up fa-3x secondary-color"></i></span>
            </a>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
